# IoT Mock Service Configuration

# Service Configuration
HOST=0.0.0.0
PORT=8090
DEBUG=true
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080

# MQTT Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=iot_user
MQTT_PASSWORD=iot123
MQTT_CLIENT_ID_PREFIX=mock_device

# Device Simulation Configuration
DEFAULT_DEVICE_COUNT=5
SIMULATION_INTERVAL=5.0
DATA_VARIATION_PERCENT=0.1

# Energy Data Ranges
POWER_MIN=0.5
POWER_MAX=50.0
VOLTAGE_NOMINAL=240.0
VOLTAGE_TOLERANCE=5.0

# Device Types (comma-separated)
DEVICE_TYPES=hvac,lighting,server,industrial,appliance

# MQTT Topics
MQTT_TOPIC_PREFIX=energy/devices
DATA_TOPIC_SUFFIX=data
STATUS_TOPIC_SUFFIX=status
COMMAND_TOPIC_SUFFIX=commands
