# Authentication Service Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=Energy Tracking Auth Service
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/energy_tracking

# Redis Configuration
REDIS_URL=redis://:password@redis:6379/0

# JWT Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Settings
BCRYPT_ROUNDS=12
SESSION_EXPIRE_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Email Settings
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=2
EMAIL_FROM=noreply@energytracking.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# API Settings
API_PREFIX=/api/v1
RATE_LIMIT_PER_MINUTE=100
